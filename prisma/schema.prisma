generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id       Int @id @default(autoincrement())
  nombre   String
}

model Color {
  id       Int @id @default(autoincrement())
  color    String
}

model Descuento {
  id            Int @id @default(autoincrement())
  fechaInicio   String
  fechaFin      String
  porcentaje    Float
}


model Imagen {
  id                Int @id @default(autoincrement())
  url               String
  altDescripcion    String
  
}
